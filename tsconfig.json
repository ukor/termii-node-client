{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "es2016",
    "lib": [],

    "module": "commonjs",
    
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    
    "skipLibCheck": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"],
}
