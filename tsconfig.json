{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "lib": ["es5"],

    "module": "commonjs",
    
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "removeComments": true,
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    
    "skipLibCheck": true

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"],
}
